<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:id="@+id/recording">

    <RelativeLayout
            android:id="@+id/header_name_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/recording_name"
                android:textStyle="bold"
                android:textSize="17dp"
                android:text="+971 566028708"
                android:layout_marginStart="@dimen/recording_title_unselected_margin_start"
        />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/header_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    android:layout_below="@id/header_name_section">


        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recording_checkbox"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/recording_checkbox_gone_start_margin"
                android:visibility="gone"
        />

        <ImageView
                android:layout_width="@dimen/recording_adorn_side"
                android:layout_height="@dimen/recording_adorn_side"
                android:id="@+id/recording_adorn"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:layout_toEndOf="@id/recording_checkbox"
                android:layout_marginStart="@dimen/recording_adorn_unselected_margin_start"
        />

        <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/exclamation"
                android:id="@+id/recording_exclamation"
                android:layout_alignTop="@id/recording_adorn"
                android:layout_alignEnd="@id/recording_adorn"
                android:visibility="gone"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/recording_title"
                android:textStyle="bold"
                android:textSize="13dp"
                android:text="adasdasd asdsadsad asdsad"
                android:layout_marginStart="@dimen/recording_title_unselected_margin_start"
        />

        <ImageView
                android:layout_width="@dimen/recording_type_side"
                android:layout_height="@dimen/recording_type_side"
                android:layout_marginEnd="@dimen/recording_type_margin_end"
                android:id="@+id/recording_type"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
        />

    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_section"
            android:paddingTop="5dp"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/latitude"
                android:textStyle="bold"
                android:visibility="gone"
                android:text=""
                android:textSize="16dp"
                android:layout_marginStart="@dimen/recording_title_unselected_margin_start"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/longitude"
                android:textStyle="bold"
                android:visibility="gone"
                android:text=""
                android:textSize="16dp"
                android:layout_marginStart="@dimen/recording_title_unselected_margin_start"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/full_address"
                android:textStyle="bold"
                android:drawableStart="@drawable/location_icon_dr"
                android:drawablePadding="10dp"
                android:text="dfdfdsf"
                android:textSize="12dp"
                android:layout_marginStart="@dimen/recording_title_unselected_margin_start"/>


    </LinearLayout>

</RelativeLayout>
